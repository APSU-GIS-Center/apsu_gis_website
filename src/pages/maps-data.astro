---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import thumbMontgomery from '../assets/images/thumbnails/montgomery.png';
import thumbCheatham from '../assets/images/thumbnails/cheatham.png';
import thumbRobertson from '../assets/images/thumbnails/robertson.png';
---

<Layout title="Maps & Data - APSU GIS Center" description="Access our collection of interactive maps, dashboards, and geospatial data applications.">
  <section class="bs-container py-24">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h1 class="bs-h1 mb-6">Maps & Data Portal</h1>
      <p class="bs-body-text text-lg text-bs-foreground-light">
        Explore our suite of interactive mapping applications and data dashboards serving the campus and community.
      </p>
    </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Montgomery County -->
      <a href="https://apsu-gis.maps.arcgis.com/apps/webappviewer/index.html?id=be2d2657b1124b419a2c8177ee4d1d29" target="_blank" class="block p-0 rounded-xl bg-bs-surface-2 hover:bg-bs-surface-3 transition-all duration-300 group overflow-hidden border border-bs-surface-3 hover:border-apsu-red/50 shadow-sm hover:shadow-xl">
        <div class="aspect-video relative overflow-hidden">
          <Image src={thumbMontgomery} alt="Montgomery County GIS Map" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 group-hover:text-apsu-red transition-colors flex items-center gap-2">
            Montgomery County
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
          </h3>
          <p class="text-sm text-bs-foreground-dark">Official GIS map for Montgomery County, TN.</p>
        </div>
      </a>

      <!-- Cheatham County -->
      <a href="http://apsu-gis.maps.arcgis.com/apps/webappviewer/index.html?id=57fda8c7174544f78bd70d9f11332ca7" target="_blank" class="block p-0 rounded-xl bg-bs-surface-2 hover:bg-bs-surface-3 transition-all duration-300 group overflow-hidden border border-bs-surface-3 hover:border-apsu-red/50 shadow-sm hover:shadow-xl">
        <div class="aspect-video relative overflow-hidden">
          <Image src={thumbCheatham} alt="Cheatham County GIS Map" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 group-hover:text-apsu-red transition-colors flex items-center gap-2">
            Cheatham County
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
          </h3>
          <p class="text-sm text-bs-foreground-dark">Interactive parcel and zoning map for Cheatham County.</p>
        </div>
      </a>

      <!-- Robertson County -->
      <a href="https://apsu-gis.maps.arcgis.com/apps/webappviewer/index.html?id=e84517fc428f4e9f967f7b6196498c32" target="_blank" class="block p-0 rounded-xl bg-bs-surface-2 hover:bg-bs-surface-3 transition-all duration-300 group overflow-hidden border border-bs-surface-3 hover:border-apsu-red/50 shadow-sm hover:shadow-xl">
        <div class="aspect-video relative overflow-hidden">
          <Image src={thumbRobertson} alt="Robertson County GIS Map" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 group-hover:text-apsu-red transition-colors flex items-center gap-2">
            Robertson County
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
          </h3>
          <p class="text-sm text-bs-foreground-dark">Comprehensive GIS viewer for Robertson County.</p>
        </div>
      </a>
      
      <!-- Call to Action Card -->
      <div class="p-6 rounded-xl border border-dashed border-bs-surface-3 flex flex-col items-center justify-center text-center">
        <h3 class="font-bold mb-2">Need Custom Data?</h3>
        <p class="text-sm text-bs-foreground-dark mb-4">We build custom dashboards for organizations.</p>
        <a href="/contact" class="bs-btn text-sm">Request Service</a>
      </div>
    </div>
  </section>
</Layout>
