---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog - APSU GIS Center" description="Updates, tutorials, and stories from the GIS Center.">
  <section class="bs-container py-24">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h1 class="bs-h1 mb-6 text-apsu-red">Blog & Updates</h1>
      <p class="bs-body-text text-xl text-bs-foreground-light">
        Latest news, tutorials, and stories from our team.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="group bg-bs-surface-2 rounded-xl overflow-hidden hover:bg-bs-surface-3 transition-colors flex flex-col h-full">
          {post.data.image ? (
             <div class="aspect-video relative overflow-hidden">
                <Image src={post.data.image} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
             </div>
          ) : (
             <div class="aspect-video bg-bs-surface-3 flex items-center justify-center text-4xl">
                üìù
             </div>
          )}
          
          <div class="p-6 flex flex-col flex-1">
            <div class="text-xs font-bold text-apsu-red uppercase tracking-wide mb-2">
                {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
            </div>
            <h2 class="text-xl font-bold text-white mb-3 group-hover:text-apsu-red transition-colors">{post.data.title}</h2>
            <p class="text-bs-foreground-light line-clamp-3 text-sm flex-1">
                {post.data.description}
            </p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
