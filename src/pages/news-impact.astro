import Layout from '../layouts/Layout.astro';

const articles = [
  {
    title: "Response to Waverly Floods",
    category: "Crisis Response",
    description: "Deployed rapid mapping teams to Humphreys County to assist emergency ops and assess damage after historic flooding.",
    icon: "üåä"
  },
  {
    title: "COVID-19 PPE Initiative",
    category: "Community Service",
    description: "Led a statewide effort to 3D-print and distribute thousands of face shields to frontline medical workers during the pandemic.",
    icon: "üõ°Ô∏è"
  },
  {
    title: "Habitat for Humanity Virtual Tours",
    category: "Innovation",
    description: "Partnered with Habitat for Humanity to create immersive 3D virtual tours of home designs for prospective homeowners.",
    icon: "üè†"
  },
  {
    title: "Vanderbilt LiDAR Traffic Study",
    category: "Research",
    description: "Collaborated with Vanderbilt University researchers using LiDAR to analyze traffic patterns and improve pedestrian safety.",
    icon: "üö¶"
  }
];

const awards = [
  {
    title: "Special Achievement in GIS",
    org: "ESRI International",
    description: "Recognized for outstanding vision, leadership, and innovative use of ESRI's geographic information system technology."
  },
  {
