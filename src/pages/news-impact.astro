---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import imgDrone from '../assets/images/drone-stadium.jpg';
import imgVR from '../assets/images/students-vr.jpg';
import imgScan from '../assets/images/3d-scanning.jpg';

const articles = [
  {
    title: "Response to Waverly Floods",
    category: "Crisis Response",
    description: "Deployed rapid mapping teams to Humphreys County to assist emergency ops and assess damage after historic flooding.",
    image: imgDrone,
    alt: "Drone survey of flood damage"
  },
  {
    title: "COVID-19 PPE Initiative",
    category: "Community Service",
    description: "Led a statewide effort to 3D-print and distribute thousands of face shields to frontline medical workers during the pandemic.",
    image: null, // Keeping icon for this one as we don't have a specific PPE image in the list, or we could use generic if available. Let's stick to icon if no image.
    icon: "üõ°Ô∏è"
  },
  {
    title: "Habitat for Humanity Virtual Tours",
    category: "Innovation",
    description: "Partnered with Habitat for Humanity to create immersive 3D virtual tours of home designs for prospective homeowners.",
    image: imgVR,
    alt: "Students using VR headsets"
  },
  {
    title: "Vanderbilt LiDAR Traffic Study",
    category: "Research",
    description: "Collaborated with Vanderbilt University researchers using LiDAR to analyze traffic patterns and improve pedestrian safety.",
    image: imgScan,
    alt: "3D LiDAR point cloud scan"
  }
];

const awards = [
  {
    title: "Special Achievement in GIS",
    org: "Esri",
    description: "Recognized for outstanding work in the GIS field."
  },
  {
    title: "Community Service Award",
    org: "Clarksville Chamber of Commerce",
    description: "For dedication to public safety and disaster response."
  }
];
---

<Layout title="News & Impact - APSU GIS Center" description="Explore the impactful projects, awards, and community service initiatives of the APSU GIS Center.">
  <section class="bs-container py-24">
    <div class="max-w-4xl mx-auto mb-16 text-center">
      <h1 class="bs-h1 mb-6 text-apsu-red">News & Impact</h1>
      <p class="bs-body-text text-xl text-bs-foreground-light">
        Beyond maps and data, we are driven by a mission to serve our community. From crisis response to innovative research, our work makes a tangible difference.
      </p>
    </div>

    <!-- Featured Stories -->
    <h2 class="bs-h2 mb-8 text-center">Featured Stories</h2>
    <div class="grid md:grid-cols-2 gap-8 mb-24">
      {articles.map(article => (
        <article class="bg-bs-surface-2 rounded-xl hover:bg-bs-surface-3 transition-colors overflow-hidden group">
          {article.image ? (
            <div class="h-48 overflow-hidden relative">
              <Image src={article.image} alt={article.alt} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
              <div class="absolute inset-0 bg-gradient-to-t from-bs-surface-2 to-transparent opacity-60"></div>
            </div>
          ) : (
            <div class="h-6 bg-apsu-red/5"></div> /* Spacer if no image */
          )}
          
          <div class="p-8 relative">
             {/* Icon float if no image, or badge if image? Let's genericize */}
             {!article.image && <div class="text-4xl mb-4">{article.icon}</div>}
             
            <div class="mb-2">
              <span class="text-apsu-red text-sm font-bold uppercase tracking-wider">{article.category}</span>
            </div>
            <h3 class="text-2xl font-bold text-white leading-tight mb-4">{article.title}</h3>
            <p class="text-bs-foreground-light leading-relaxed">
              {article.description}
            </p>
          </div>
        </article>
      ))}
    </div>

    <!-- Awards & Recognition -->
    <div class="bg-bs-surface-2 rounded-2xl p-12 text-center">
      <h2 class="bs-h2 mb-12">Awards & Recognition</h2>
      <div class="grid md:grid-cols-2 gap-12">
        {awards.map(award => (
          <div class="flex flex-col items-center">
            <div class="w-16 h-16 rounded-full bg-apsu-red/20 text-apsu-red flex items-center justify-center text-3xl mb-6">
              üèÜ
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{award.title}</h3>
            <p class="text-sm text-apsu-red font-bold mb-4">{award.org}</p>
            <p class="text-bs-foreground-light max-w-sm mx-auto">
              {award.description}
            </p>
          </div>
        ))}
      </div>
    </div>

  </section>
</Layout>
