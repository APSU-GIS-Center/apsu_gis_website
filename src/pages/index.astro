---
import Layout from '../layouts/Layout.astro';
import Dashboard from '../components/Dashboard.astro';
import ImpactMetrics from '../components/ImpactMetrics.astro';
import { Image } from 'astro:assets';

import imgDrone from '../assets/images/drone-stadium.jpg';
import imgCampus from '../assets/images/campus-aerial.jpg';
import imgVR from '../assets/images/students-vr.jpg';
import imgScan from '../assets/images/3d-scanning.jpg';

const gallery = [
  { img: imgDrone, title: "Aerial Drone Mapping", desc: "High-resolution orthomosaics and surveying." },
  { img: imgVR, title: "Immersive VR Lab", desc: "Cutting-edge virtual reality simulation and training." },
  { img: imgCampus, title: "Campus Intelligence", desc: "Detailed mapping for facilities and safety." },
  { img: imgScan, title: "3D LiDAR Scanning", desc: "Digital twinning for historic preservation." },
];
---

<Layout title="APSU GIS Center - Mapping the Future" description="The GIS Center at Austin Peay State University provides expert geospatial solutions, student training, and community service.">
  
  <!-- Hero Section -->
  <!-- Hero Section -->
  <section id="hero" class="relative text-center min-h-[85svh] flex flex-col justify-center items-center px-4 overflow-hidden">
    <!-- Background Image -->
    <Image 
      src={imgCampus} 
      alt="Austin Peay State University Campus Aerial View" 
      class="absolute inset-0 w-full h-full object-cover -z-10" 
      quality="high"
    />
    <div class="absolute inset-0 bg-black/60 -z-10"></div>

    <div class="relative z-10 max-w-4xl mx-auto space-y-8 animate-fade-in-up">
      <h1 class="font-header text-6xl md:text-7xl/tight lg:text-8xl/tight font-bold tracking-tight text-white drop-shadow-2xl">
        Real-World Solutions. <span class="text-transparent bg-clip-text bg-gradient-to-r from-apsu-red to-red-400">University Powered.</span>
      </h1>
      <p class="font-body text-xl md:text-2xl text-gray-100 max-w-2xl mx-auto leading-relaxed drop-shadow-md">
        The APSU GIS Center delivers cost-effective, data-driven strategies for Tennessee and Kentucky communities.
      </p>
      
      <div class="flex flex-wrap gap-4 justify-center pt-4">
        <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/services"} class="bs-btn text-lg bg-apsu-red hover:bg-red-700 text-white border-none shadow-[0_0_20px_rgba(196,30,58,0.4)]">
          View Our Services
        </a>
        <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/contact"} class="bs-btn bs-btn-outline text-lg border-white text-white hover:bg-white hover:text-black">
          Partner With Us
        </a>
      </div>
    </div>
  </section>

  <!-- Community Snapshot (Dashboard) -->
  <Dashboard />

  <!-- Featured Capabilities Gallery (New Content) -->
  <section class="bs-container py-24 bg-bs-surface-1">
    <div class="text-center mb-16">
      <h2 class="bs-h2 mb-4">Project Portfolio</h2>
      <p class="bs-body-text max-w-2xl mx-auto">See how our students and staff leverage advanced technology to solve real-world problems.</p>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {gallery.map(item => (
        <div class="group relative aspect-[4/5] rounded-xl overflow-hidden cursor-pointer">
          <Image src={item.img} alt={item.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
          <div class="absolute bottom-0 left-0 p-6 translate-y-2 group-hover:translate-y-0 transition-transform">
            <h3 class="text-xl font-bold text-white mb-1">{item.title}</h3>
            <p class="text-sm text-gray-300 opacity-0 group-hover:opacity-100 transition-opacity delay-100">{item.desc}</p>
          </div>
        </div>
      ))}
    </div>
    </div>
    <div class="text-center">
      <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/portfolio"} class="bs-btn bs-btn-outline border-apsu-red text-apsu-red hover:bg-apsu-red hover:text-white">
        View Full Portfolio
      </a>
    </div>
  </section>

  <!-- Impact Metrics -->
  <ImpactMetrics />

  <!-- Services Grid -->
  <section id="services" class="bs-container py-24">
    <div class="text-center mb-16">
      <h2 class="bs-h2 mb-4">Core Services</h2>
      <p class="bs-body-text max-w-2xl mx-auto">We provide comprehensive geospatial solutions for campus, community, and commercial partners.</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Public Safety -->
      <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/services/public-safety"} class="group bg-bs-surface-2 p-8 rounded-2xl hover:bg-bs-surface-3 transition-all duration-300 border border-transparent hover:border-apsu-red/20">
        <div class="w-16 h-16 bg-apsu-red/10 rounded-xl flex items-center justify-center text-3xl mb-6 group-hover:scale-110 transition-transform text-apsu-red">
          ðŸš’
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-apsu-red transition-colors">Public Safety</h3>
        <p class="text-bs-foreground-light">Advanced mapping for emergency response, NG911, and hazard mitigation.</p>
      </a>

      <!-- Econ Dev -->
      <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/services/economic-development"} class="group bg-bs-surface-2 p-8 rounded-2xl hover:bg-bs-surface-3 transition-all duration-300 border border-transparent hover:border-apsu-red/20">
        <div class="w-16 h-16 bg-apsu-red/10 rounded-xl flex items-center justify-center text-3xl mb-6 group-hover:scale-110 transition-transform text-apsu-red">
          ðŸ“ˆ
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-apsu-red transition-colors">Economic Dev</h3>
        <p class="text-bs-foreground-light">Data-driven insights for regional growth, site selection, and workforce analysis.</p>
      </a>

      <!-- Campus Map -->
      <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/services/campus-mapping"} class="group bg-bs-surface-2 p-8 rounded-2xl hover:bg-bs-surface-3 transition-all duration-300 border border-transparent hover:border-apsu-red/20">
        <div class="w-16 h-16 bg-apsu-red/10 rounded-xl flex items-center justify-center text-3xl mb-6 group-hover:scale-110 transition-transform text-apsu-red">
          ðŸŽ“
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-apsu-red transition-colors">Campus Mapping</h3>
        <p class="text-bs-foreground-light">Detailed facility management, utility mapping, and student navigation tools.</p>
      </a>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-32 bg-apsu-red text-white text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/noise.png')] opacity-10 mix-blend-overlay"></div>
    <div class="bs-container relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold mb-8 tracking-tight">Ready to leverage the power of GIS?</h2>
      <a href={import.meta.env.BASE_URL.replace(/\/$/, '') + "/contact"} class="inline-flex items-center gap-2 bg-white text-apsu-red px-8 py-4 rounded-full font-bold text-lg hover:bg-gray-100 transition-transform hover:scale-105 shadow-xl">
        Start Your Project
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    </div>
  </section>
</Layout>
